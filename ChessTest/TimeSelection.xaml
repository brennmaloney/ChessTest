<Window x:Class="ChessTest.TimeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTest"
        mc:Ignorable="d"
        Title="Chess" Height="400" Width="400" Background="#FF4C7997">
    <Grid>
        <Label Content="Select Amount of Time:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,0,0"
               FontSize="30" FontFamily="Yu Gothic UI Semibold" Foreground="White"/>
        <Button Content="1 Minute" Click="Click" Tag="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-100,0,0"
                Width="100" Height="40"/>
        <Button Content="5 Minute" Click="Click" Tag="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                Width="100" Height="40"/>
        <Button Content="10 Minute" Click="Click" Tag="10" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0"
                Width="100" Height="40"/>
    </Grid>
</Window>
