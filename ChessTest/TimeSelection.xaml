<Window x:Class="ChessTest.TimeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTest"
        mc:Ignorable="d"
        Title="Chess" Height="400" Width="400" Background="#FF4C7997">
    <Grid>
        <Label Content="Select Amount of Time:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,30,0,0"
               FontSize="30" FontFamily="Yu Gothic UI Semibold" Foreground="White"/>
        <StackPanel x:Name="time" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Bullet" Click="ChangeBullet" Tag="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="100" Height="40"/>
            <Button Content="Blitz" Click="ChangeBlitz" Tag="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="100" Height="40"/>
            <Button Content="Rapid" Click="ChangeRapid" Tag="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="100" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
