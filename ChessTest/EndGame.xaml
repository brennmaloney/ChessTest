<Window x:Class="ChessTest.EndGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTest"
        mc:Ignorable="d"
        Title="Chess" Height="400" Width="400" Background="#FF4C7997">
    <Grid>
        <Label x:Name="Winner" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,0,0" FontFamily="Yu Gothic UI Semibold" FontSize="30"/>
        <Button Content="Play Again?" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Yu Gothic UI Semibold" FontSize="30"/>
    </Grid>
</Window>
